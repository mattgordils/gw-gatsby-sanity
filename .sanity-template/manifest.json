{
  "version": 2,
  "title": "GW Gatsby Sanity Base",
  "description": "Hot sites",
  "previewMedia": {
    "type": "image",
    "src": ".sanity-template/assets/frontend.png",
    "alt": "Preview Image"
  },
  "technologies": [
    {
      "id": "gatsby",
      "name": "Gatsby",
      "url": "https://www.gatsbyjs.org"
    }
  ],
  "deployment": {
    "provider": "netlify",
    "sites": [
      {
        "id": "studio",
        "type": "studio",
        "title": "GW Gatsby Sanity Base Studio",
        "description": "GW Gatsby Sanity Base Studio",
        "dir": "./studio",
        "previewMedia": {
          "type": "image",
          "src": "assets/frontend.jpg",
          "alt": "Preview Image"
        },
        "buildSettings": {
          "base": "/",
          "dir": "/studio/dist",
          "cmd": "yarn build-studio"
        },
        "requirements": ["build-hook"]
      },
      {
        "id": "web",
        "type": "web",
        "title": "GW Gatsby Sanity Base",
        "description": "Hot sites",
        "previewMedia": {
          "type": "image",
          "src": "assets/frontend.jpg",
          "alt": "Preview Image"
        },
        "buildSettings": {
          "base": "/",
          "dir": "/web/public",
          "cmd": "npm run build-web"
        },
        "dir": "./web",
        "requiredCorsOrigins": [
          {
            "origin": "http://localhost:8000",
            "allowCredentials": false
          }
        ],
        "requiredTokens": [
          {
            "role": "deploy-studio",
            "label": "GraphQL API Deployer"
          }
        ],
        "requirements": [
          "build-hook"
        ]
      }
    ],
    "corsOrigins": [
      {
        "origin": "http://localhost:8000",
        "allowCredentials": true
      }
    ]
  }
}
